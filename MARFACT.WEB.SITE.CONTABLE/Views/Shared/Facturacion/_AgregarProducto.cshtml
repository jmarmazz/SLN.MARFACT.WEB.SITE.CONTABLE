
@using MARFACT.APPLICATION.Constants
@using MF.TOOLS

<div id="modalAddProducto" class="modal fade" role="form" action="#" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document" style="height: 90% !important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-hidden="true" data-dismiss="modal">
                    &times;
                </button>
                <h5 class="modal-title" id="tituloMant">
                    <i class="glyphicon glyphicon-plus"></i> Agregar Producto
                </h5>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <select id="cboConsulta" class="form-control input-sm selectpicker margin-mobile" style="width: 100%">
                                @foreach (TopsConsultaMant i in Enum.GetValues(typeof(TopsConsultaMant)))
                                {
                                    if (i == TopsConsultaMant.Registros1000)
                                    {
                                        <option value="@((short)i)" selected>@i.EnumtoString().ToUpper()</option>
                                    }
                                    else
                                    {
                                        <option value="@((short)i)">@i.EnumtoString().ToUpper()</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-5" style="display:flex">
                            <input type="text" class="form-control" style="font-size: 15px;" placeholder="Buscar..." id="txtCoincidencia">
                        </div>
                        <button id="btnBuscarProductos" value="Buscar" class="btn btn-primary" style="margin-left: 7px;">
                            <span class="glyphicon glyphicon-search"></span> Buscar
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <table id="tblAddProducto" class="table table-striped table-bordered table-sm table-responsive"
                               cellspacing="0" cellpadding="0" width="100%">
                            <thead>
                            </thead>
                            <tbody class="text-center">
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <div class="modal-footer" style="margin-top:0px !important">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>
