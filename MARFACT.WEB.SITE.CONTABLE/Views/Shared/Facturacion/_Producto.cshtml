
@{
    ViewData["Title"] = "Detalle";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-secondary">
            <div class="card-header"> 
                <h6 class="card-title">
                    <i class="glyphicon glyphicon-edit"></i> @ViewData["Title"]
                </h6> 
            </div>
            <div class="card-body" style="padding: 0px 10px;">
                <div style="margin-top: 5px">
                    <button id="btnAgregarProductos" type="button" class="btn btn-primary btn-emisor">
                        <span class="glyphicon glyphicon-search"></span> Agregar
                    </button>
                    <div class="pull-right">
                        <label style="padding-right: 5px; vertical-align: middle;" class="form-check-label">Todos</label>
                        <a id="btnEliminarTodoProducto" class="tooltip--triangle" title="Eliminar" style="cursor: pointer; padding-right: 10px;"><span class="glyphicon glyphicon-trash" style="font-size:17px;"></span></a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="tblProducto" class="table table-striped table-responsive table-sm" cellspacing="0" cellpadding="0" width="100%">
                                <thead class="label-primary">
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th>Nombre</th>
                                        <th>Precio</th>
                                        <th>Cant.</th>
                                        <th>Monto</th>
                                        <th>Dscto.</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
