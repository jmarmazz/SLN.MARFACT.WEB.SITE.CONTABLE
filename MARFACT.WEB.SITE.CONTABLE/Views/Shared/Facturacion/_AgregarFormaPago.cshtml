 
<div id="modalFormaPago" class="modal fade in" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id="divModalContent">
            <div class="modal-header">
                <button type="button" class="close" aria-hidden="true" data-dismiss="modal">
                    &times;
                </button>
                <h5 class="modal-title" id="tituloMant">
                    <i class="glyphicon glyphicon-plus"></i> Agregar Forma Pago
                </h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <label class="form-label">Forma Pago:</label>
                        @Html.DropDownList("IdFormaPago", new SelectList(Model.ListFormasPago, "Key", "Value"), "", new { @id = "cboFormaPago", @class = "form-control select2bs4", @style = "width:100%", data_placeholder = "Seleccione..." })
                    </div>
                </div>
                <div class="row margin-laptop">
                    <div class="col-md-8 col-sm-8">
                        <label class="control-label">Monto: </label>
                        <input id="txtMontoPago" type="text" class="form-control input-sm isdecimal2" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnAgregarFormaPago">Agregar</button>
            </div>
        </div>
    </div>
</div>