@{

    Layout = "~/Views/Shared/_Master.cshtml";
}

<div class="container-fluid">
<div class="row">
    <div class="col-md-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Propietario</h3> 
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label for="txtHC">HC #</label>
                            <input type="number" id="txtHC" class="form-control input-sm" >
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="txtFechaRegistro">Fecha Registro</label>
                            <input type="text" id="txtFechaRegistro" class="form-control input-sm datepicker" placeholder="dd-mm-aaaa" onkeydown="event.preventDefault()">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="txtHora">Hora</label>
                            <input type="text" id="txtHora" class="form-control input-sm" >
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="opcPropietario">
                                <label class="form-check-label">Propietario</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="opcPropietario">
                                <label class="form-check-label">Responsable</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Tipo Identificación</label>
                                <select class="form-control input-sm select2bs4-nosearch" id="cboTipoIdentificacion" data-placeholder="Seleccione..." style="width: 100%;" > 
                                    <option value=""></option>
                                    <option value="C">Cédula</option>
                                    <option value="R">RUC</option> 
                                    <option value="P">Pasaporte</option> 
                                </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtNumIdentificacion">Número Identificación</label>
                            <input type="text" id="txtNumIdentificacion" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtNombrePropietario">Nombres</label>
                            <input type="text" id="txtNombrePropietario" class="form-control input-sm">
                        </div>
                     </div>
                     <div class="col-6">
                        <div class="form-group">
                            <label for="txtApellidoPropietario">Apellidos</label>
                            <input type="text" id="txtApellidoPropietario" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtDireccion">Dirección</label>
                    <input type="text" id="txtDireccion" class="form-control input-sm">
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtTelefono">Teléfono</label>
                            <input type="text" id="txtTelefono" class="form-control input-sm" >
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtCelular">Celular</label>
                            <input type="text" id="txtCelular" class="form-control input-sm" >
                        </div>
                    </div> 
                </div> 
                <div class="form-group">
                    <label for="txtEmail">Email</label>
                    <input type="text" id="txtEmail" class="form-control input-sm">
                </div> 
            </div> 
        </div> 
    </div>
    <div class="col-md-6">
        <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Paciente</h3> 
        </div>
        <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtNombrePaciente">Nombre</label>
                            <input type="text" id="txtNombrePaciente" class="form-control input-sm" >
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtEspecie">Especie</label>
                            <input type="text" id="txtEspecie" class="form-control input-sm" >
                        </div>
                    </div> 
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtRaza">Raza</label>
                            <input type="text" id="txtRaza" class="form-control input-sm" >
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Sexo</label>
                            <select class="form-control input-sm select2bs4-nosearch" id="cboSexoPaciente" data-placeholder="Seleccione..." style="width: 100%;" > 
                                <option value=""></option>
                                <option value="M">Macho</option>
                                <option value="F">Hembra</option> 
                            </select>
                        </div>
                    </div> 
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtFechaNacimiento">Fecha Nacimiento</label>
                            <input type="text" id="txtFechaNacimiento" class="form-control input-sm datepicker" placeholder="dd-mm-aaaa" onkeydown="event.preventDefault()">
                        </div>
                     </div>
                     <div class="col-6">
                        <div class="form-group">
                            <label for="txtPeso">Peso (gr)</label>
                            <input type="text" id="txtPeso" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtColorTipoPelaje">Color y tipo pelaje</label>
                            <input type="text" id="txtColorTipoPelaje" class="form-control input-sm" >
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtNumChip">Chip #</label>
                            <input type="text" id="txtNumChip" class="form-control input-sm" >
                        </div>
                    </div> 
                </div>
                <div class="form-group">
                    <label for="txtDireccion">Otra Identificación/señales particulares</label>
                    <textarea class="form-control input-sm" rows="2"></textarea>
                </div>   
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtFinZootecnico">Fin Zootécnico</label>
                            <input type="text" id="txtFinZootecnico" class="form-control input-sm">
                        </div>
                     </div>
                     <div class="col-6">
                        <div class="form-group">
                            <label for="txtOrigenProcedencia">Origen/procedencia</label>
                            <input type="text" id="txtOrigenProcedencia" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtDieta">Dieta</label>
                            <input type="text" id="txtDieta" class="form-control input-sm">
                        </div>
                     </div>
                     <div class="col-6">
                        <div class="form-group">
                            <label for="txtEnfermedadPrevia">Enfermedades previas</label>
                            <input type="text" id="txtEnfermedadPrevia" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                 <div class="row">
                    <div class="col-2">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="opcEsterilizado">
                                <label class="form-check-label">Si</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="opcEsterilizado">
                                <label class="form-check-label">No</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 col-offset-4">
                        <div class="form-group">
                            <label for="txtNumPartos">Número Partos</label>
                            <input type="number" id="txtNumPartos" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                <div class="row">
                     <div class="col-6">
                        <div class="form-group">
                            <label for="txtCirugiaPrevia">Cirugías previas</label>
                            <input type="text" id="txtCirugiaPrevia" class="form-control input-sm">
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <a href="#" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Guardar" class="btn btn-success ">
        </div>
    </div>
</div>