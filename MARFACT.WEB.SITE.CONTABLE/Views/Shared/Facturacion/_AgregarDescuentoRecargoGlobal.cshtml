
@using MARFACT.DOMAIN.Constants
@using MF.TOOLS

<div id="modalDsctoRecargoGlobal" class="modal fade in" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content" id="divModalContent">
            <div class="modal-header">
                <button type="button" class="close" aria-hidden="true" data-dismiss="modal">
                    &times;
                </button>
                <h5 class="modal-title" id="tituloMant">
                    <i class="glyphicon glyphicon-plus"></i> Agregar Descuento / Recargo Global
                </h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4  col-sm-4">
                        <label class="form-label">Tipo :<span class="mandatory">*</span></label>
                        <select id="cboTipoDsctoRecargo" class="form-control input-sm select2bs4-nosearch" style="width: 100%" data-placeholder="Seleccione...">
                           
                        </select>
                    </div>
                    <div class="col-md-4  col-sm-4">
                        <label class="form-label">Tipo Valor :<span class="mandatory">*</span></label>
                        <select id="cboTipoValorDsctoRecargo" class="form-control select2bs4-nosearch" style="width:100%" data-placeholder="Seleccione...">
                            <option value="%">%</option>
                            <option value="$">$</option>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label style="padding-right: 10px;" class="form-check-label">Aplicar a Todos</label>
                        <input type="checkbox" id="chkAplicaTodos" class="form-check-input" />
                    </div>
                </div>
                <div class="row margin-laptop">
                    <div class="col-md-8 col-sm-8">
                        <label class="control-label">Descripción :</label>
                        <input id="txtDescripcionDsctoRecargo" class="form-control" />
                    </div>
                    <div class="col-md-4  col-sm-4">
                        <label class="form-label">Indicador Facturación :</label>
                        <select id="cboIndicadorFactDsctoRecargo" class="form-control input-sm select2bs4-nosearch" style="width: 100%" data-placeholder="Seleccione...">
                           
                        </select>
                    </div>
                </div>
                <div class="row margin-laptop">
                    <div class="col-md-6 col-sm-5">
                        <label class="control-label">Valor % :</label>
                        <input id="txtValorDsctoRecargo" type="number" class="form-control input-sm" disabled />
                        <small id="passwordHelpBlock" class="form-text text-muted">Condicional a que el descuento o recargo sea en %</small>
                    </div>
                    <div class="col-md-6 col-sm-5">
                        <label class="control-label">Monto :<span class="mandatory">*</span></label>
                        <input id="txtMontoDsctoRecargo" type="text" class="form-control input-sm isdecimal2" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnAgregarDsctoRecargoGlobal">Agregar</button>
            </div>
        </div>
    </div>
</div>